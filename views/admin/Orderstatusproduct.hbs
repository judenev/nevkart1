<section style="background-color:black ;" class="h-100 gradient-custom">

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">


                    <div style="background-color: rgba(5, 42, 78, 0.555); color:#e0e0e0" class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: #42103557;">Order Details</p>
                            <p class="small text-muted mb-0">Receipt Voucher : 1KAU9-84UIL</p>
                        </div>
                        <div style="background-color: rgba(0, 0, 0, 0.514)" class="card shadow-0 border mb-4">
                            {{#each product}}

                            <div class="card-body" style="color:rgba(241, 226, 206, 0.979)">

                                <div class="row">
                                    {{!-- {{#each pro}} --}}
                                    <div class="col-md-2">
                                        <img src="../../images/{{this.product.[0].product.file.image1.[0].filename}}"
                                            class="img-fluid" alt="Phone">
                                        <p class="text-muted mb-0 small"><Strong style="color:beige ;">
                                                Status:</Strong><br>{{this.status}}</p>
                                    </div>
                                    {{!-- {{/each}} --}}

                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center"
                                        style="width:20% ;">
                                        <p class="text-muted mb-0 small" style="color: bisque !important; ;"> <Strong
                                                style="color:beige ; text-decoration: underline;"> Product
                                                Name:</Strong><br>{{this.product.[0].product.productname}}</p>
                                    </div>


                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small"><Strong
                                                style="color:rgba(241, 226, 206, 0.979) ; text-decoration: underline;">
                                                Ordered
                                                On:</Strong><br>
                                            <span class="date"
                                                style="color: bisque !important; ;">{{../j.Orderdetails.ordered_on}}</span>

                                        </p>
                                    </div>

                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small" style="color: bisque !important; ;"> <strong
                                                style="color:beige ;">Qty</strong> :{{this.stock}}</p>
                                    </div>

                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center"
                                        style="color:rgba(241, 226, 206, 0.979)">
                                        {{#eq this.product.[0].product.discprice this.product.[0].product.price }}
                                        <p class="text-muted mb-0 small"> Price:₹{{this.product.[0].product.price}}</p>
                                        {{else}}
                                        <strike>
                                            <p class="text-muted mb-0 small"> Price:₹{{this.product.[0].product.price}}
                                            </p>
                                        </strike>
                                        <p class="text-muted mb-0 small" style="color: rgb(128, 0, 11); !important">
                                            Discount Price:₹{{this.product.[0].product.discprice}}</p>
                                        {{/eq}}
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">

                                        <form action="../../Orderstatus/" method="post">
                                            <input style="display: none;" name="OrderId" type="text"
                                                value="{{../orderId}}">
                                            <input style="display: none;" name="proId" type="text"
                                                value="{{this.item}}">


                                            <p> {{this._id}}</p>

                                            {{!-- <button class="btn btn-outline-warning" type="submit">Cancel
                                                Order</button> --}}

                                        </form>

                                    </div>

                                </div>
                                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                <div class="row d-flex align-items-center">
                                    {{!-- <div class="col-md-2">

                                    </div> --}}
                                    {{!-- <div class="col-md-10">
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            {{#if this.status}}
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 30%; border-radius: 16px; background-color: #a8729a;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                            {{#else }}
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 30%; border-radius: 16px; background-color: #a8729a;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                            {{/if}}
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Pending</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                                        </div>
                                    </div> --}}
                                </div>
                            </div>
                            {{/each}}
                        </div>


                        <div class="d-flex justify-content-between pt-2">
                            <p class="fw-bold mb-0">Order Details</p>

                            <div>
                                {{#if j.Orderdetails.Discount}}
                                <p class="text-muted mb-0" style="color: green;"> <span class="fw-bold me-4"
                                        style="color: green;">Applied Coupon:</span> {{j.Orderdetails.Couponname}}</p>


                                {{else}}
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Total without discount</span>₹
                                    {{j.Orderdetails.total}}</p>
                                {{/if}}
                            </div>
                            <p class="text-muted mb-0" style="color:beige !important ;"><span class="fw-bold me-4"
                                    style="color:rgb(245, 245, 245) ;">Total: </span>₹
                                {{j.Orderdetails.total}}</p>
                        </div>

                        <div class="pt-2">
                            Address :
                            {{#with addressdatas.[0]}}
                            {{this.address.name}} <br>
                            {{this.address.deliveryaddress}}<br>
                            {{this.address.city}}<br>
                            {{this.address.state}}<br>
                            {{this.address.zipCode}}<br>
                            Mob:{{this.address.Mobilenumber}}

                            <p class="fw-bold mb-0">TTrack Order: {{this._id}}</p>

                            {{/with}}

                        </div>





                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                        style="background-color: #22041a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">
                            Total
                            : <span class="h2 mb-0 ms-2">₹ {{j.Orderdetails.total}}</span></h5>
                        <a href="back">Back </a>
                    </div>


                </div>
            </div>
        </div>
    </div>
</section>
