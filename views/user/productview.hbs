  <div class="container ">
    <div class="card">
      <div class="container-fliud">

        <div class="wrapper row">
          <div class="preview col-md-6">

            <div class="container" style="max-height: 85% !important; background-position: center;" >
          
                <img  src="../../images/{{this.product.product.file.image1.[0].filename}}" class="imagechanging" id="zoom" width="350" style="max-height: 100%;margin-left: 11%;" />
                
                  
                  
              
            </div>
            <ul class="preview-thumbnail nav nav-tabs">
              {{!-- {{#each this.product.product.file}}
              <li class="active"><a data-target="#pic-1" data-toggle="tab"><img
                    src="../../images/{{this.filename}}" /></a></li>

              {{/each}} --}}

              <li class="active"><a data-target="#img-containers" data-toggle="tab"><img
                    onmouseenter="imagechange('../../images/{{this.product.product.file.image1.[0].filename}}')"
                    src="../../images/{{ this.product.product.file.image1.[0].filename}}" style="width: 100%; max-height:80%;" /></a></li>
              <li class="active"><a data-target="#img-containers" data-toggle="tab"><img
                    onmouseenter="imagechange('../../images/{{this.product.product.file.image2.[0].filename}}')"
                    src="../../images/{{ this.product.product.file.image2.[0].filename}}" style="width: 100%;max-height:80%;" /></a></li>
              <li class="active"><a data-target="#img-containers" data-toggle="tab"><img
                    onmouseenter="imagechange('../../images/{{this.product.product.file.image3.[0].filename}}')"
                    src="../../images/{{ this.product.product.file.image3.[0].filename}}" style="width: 100%;max-height:80%;" /></a></li>
                <li class="active"><a data-target="#img-containers" data-toggle="tab"><img
                    onmouseenter="imagechange('../../images/{{this.product.product.file.image4.[0].filename}}')"
                    src="../../images/{{ this.product.product.file.image4.[0].filename}}" style="width: 100%;max-height:80%;" /></a></li>
            </ul>

          </div>
          <div class="details col-md-6">
            <h3 class="product-title">{{this.product.product.productname}}</h3>
            <div class="rating">
              <div class="stars">
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
              </div>
              <span class="review-no"></span>
            </div>

            <h4> {{#eq this.product.product.price '0' }}
              <div class="d-flex justify-content-start">
                <h6>₹{{this.product.product.price}}</h6>
                {{!-- <h6 class="text-muted ml-2"><del>₹</del></h6> --}}
              </div>
              {{else}}
              {{#when this.product.catOffer 'gt' this.product.proOffer}}
              <div class="d-flex justify-content-start">
                <h6 class="text-muted ml-2"><del style="color: rgba(255, 0, 0, 0.473);">₹{{this.product.product.price}}
                  </del></h6>
                <h6 style="color:green;"> {{this.product.catOffer}}%OFF </h6>
                    <h6>₹{{this.product.product.discprice}}</h6>
              </div>

             
              {{else}}
              <div class="d-flex justify-content-start">
                <h6 class="text-muted ml-2"><del style="color: rgba(255, 0, 0, 0.473);">₹{{this.product.price}}</del>
                </h6>
                <h6 style="color:green;"> {{this.product.proOffer}}%OFF</h6>
              <h6>₹{{this.product.product.discprice}}</h6>
              </div>
              
              {{/when}}


              {{/eq}}</span>
            </h4>
            <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
            {{#if this.product.stockstatus}}
            <h3 style="color: green;">In Stock</h3>
            {{else}}
            <h3 style="color: red;"> No stock</h3>
            {{/if}}


            <div class="action">
              {{#if this.product.stockstatus}}
              <button onclick="cartAdd('{{this.product._id}}')" class="btn btn-primary">To cart</button>
              <button onclick="wishAdd('{{this.product._id}}')" class="btn btn-secondary">WishList</button>

              {{else}}
              <button onclick="wishAdd('{{this.product._id}}')" class="btn btn-primary">WishList</button>
              {{/if}}
              <h6 style="padding-top: 5%;">Product Description:</h6> <br>
              <div style="background-color: antiquewhite;">
                <p class="product-description">{{this.product.product.description}}</p>
              </div>

            </div>

          </div>
        </div>
      </div>
