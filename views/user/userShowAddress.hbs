<body>
  <a href="/home" class="text-decoration-none">
    <h1 class="mb-4 display-5 font-weight-semi-bold"><span
        class="text-primary font-weight-bold border border-white px-3 mr-1">Nev</span>Kart</h1>
  </a>
  <h1 style="color: blue;">UserAddress</h1>
  <a href="/home" class="nav-item nav-link active"> <button class="btn btn-info"> BACK TO HOME</button> </a>
  <div class="col-md-6 form-group">
    <div class="custom-control custom-checkbox">
      <label class="custom-control-label" for="shipto" data-toggle="collapse" data-target="#shipping-address"> Click
        here to Add Address</label>
    </div>
    <div class="collapse mb-4 bg" id="shipping-address" style=" background-color:lightgray;">
      <form id="userAddress" >
        <h4 class="font-weight-semi-bold mb-4">Shipping Address</h4>
        <div class="row">
          <div class="col-md-6 form-group">
            <label>First Name</label>
            <input name="name" class="form-control" type="text" placeholder="John">
          </div>

          <div class="col-md-6 form-group">
            <label>E-mail</label>
            <input name="email" required class="form-control" type="text" placeholder="example@email.com">
          </div>
          <div class="col-md-6 form-group">
            <label>Mobile No</label>
            <input name="Mobilenumber" required class="form-control" type="number" placeholder="+123 456 789">
          </div>
          <div class="col-md-6 form-group">
            <label>Address Line 1</label>
            <input name="deliveryaddress" required class="form-control" type="text" placeholder="123 Street">
          </div>


          <div class="col-md-6 form-group">
            <label>City</label>
            <input name="city" required class="form-control" type="text" placeholder="New York">
          </div>
          <div class="col-md-6 form-group">
            <label>State</label>
            <input name="state" required class="form-control" type="text" placeholder="New York">
          </div>
          <div class="col-md-6 form-group">
            <label>ZIP Code</label>
            <input name="zipCode" required class="form-control" type="text" placeholder="123">
          </div>
        </div>
        <button class="btn btn-outline-warning" type="submit">Add Address</button>
      </form>



    </div>

  </div>
  <div class="container" style="background-color:rgb(239, 240, 239) bo ;border-radius: 5%;">
    <table style=" background-color:lightgray;" class=" table">
      <thead >
        <tr >

          <th  >Name</th>
          <th>Deliver Address</th>
          <th>Email</th>
          <th>City</th>

          <th>Pin code</th>
          <th>Mobile Number</th>
          <th>Actions</th>


        </tr>
      </thead>

      <tbody class="table-body" >
        {{#each addressAll}}
        <tr class="cell-1">







          <td>
            <div>{{this.name}}</div>
           
          </td>
          <td>
           <div style="margin-left:2% ;">{{this.deliveryaddress}}</div>
          </td>
          <td>
            <div style="margin-left:2% ;">{{this.email}}</div>
           
          </td>
          <td>
            <div style="margin-left:2% ;">{{this.city}}</div>
         
          </td>
          <td>
            <div style="margin-left:2% ;">{{this.zipCode}}</div>
           
          </td>
          <td>
            <div style="margin-left:2% ;"> Mob:{{this.Mobilenumber}}</div>
         
          </td>
          <td>
            <div style="margin-left:2% ;">
               <a href="/updateaddress/{{this.Addid}}"> <button class="btn btn-info"> Edit</button></a>
            <a href="/deleteAddress/{{this.Addid}}"><button class="btn btn-danger">Del</button></a>
            </div>
           
          </td>


          {{/each}}







        </tr>




      </tbody>
    </table>
  </div>

  <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
    <div class="row px-xl-5 pt-5">
      <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
        <a href="home" class="text-decoration-none">
